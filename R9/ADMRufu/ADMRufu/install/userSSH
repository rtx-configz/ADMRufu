"BACKUP USERS" \
"-bar DISABLE ALPHANUMERIC PASS $(msg -blu "(VULTR)")" \
"SWITCH TO HWID/TOKEN MODE"

    back
    selection=$(selection_fun 14)
    case ${selection} in
        0)break;;
        1)new_user;;
